<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC
 "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
 "http://www.freedesktop.org/standards/PolicyKit/1/policyconfig.dtd">
<!--
  Polkit policy for WireGuard Manager GNOME extension.

  allow_active = yes  →  logged-in console sessions can run the helper
                         without a password prompt (same trust model as
                         NetworkManager Wi-Fi toggle).
  allow_inactive      →  remote / inactive sessions still need admin auth.
-->
<policyconfig>
  <action id="org.wireguard.manager.helper">
    <description>Manage WireGuard tunnels</description>
    <message>Authentication is required to manage WireGuard tunnels</message>
    <icon_name>network-vpn-symbolic</icon_name>
    <defaults>
      <allow_any>auth_admin</allow_any>
      <allow_inactive>auth_admin</allow_inactive>
      <allow_active>yes</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.exec.path">/usr/local/bin/wg-manager-helper</annotate>
    <annotate key="org.freedesktop.policykit.exec.allow_gui">true</annotate>
  </action>
</policyconfig>
